{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Configuration schema for Neovim.",
  "type": "object",
  "properties": {
    "general": {
      "description": "General settings",
      "type": "object",
      "properties": {
        "offline": {
          "description": "Set this to true if internet connection is unavailable",
          "type": "boolean",
          "default": true
        },
        "proxy": {
          "description": "Proxy",
          "type": "string"
        },
        "shell": {
          "description": "The shell that the terminal emulator to start with",
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "upgrade": {
          "description": "Whether to enable nviq-upgrade. It's useful when you are using official released binary archives directly rather than installers or package managers.",
          "type": "boolean",
          "default": false
        }
      }
    },
    "path": {
      "description": "Paths",
      "type": "object",
      "properties": {
        "home": {
          "description": "Path to home directory",
          "type": "string"
        },
        "desktop": {
          "description": "Path to desktop directory",
          "type": "string"
        },
        "vimwiki": {
          "description": "Path to vimwiki directory",
          "type": "string"
        }
      }
    },
    "tui": {
      "description": "TUI settings",
      "type": "object",
      "properties": {
        "scheme": {
          "description": "Color scheme",
          "type": "string",
          "enum": [
            "default",
            "nightfox"
          ]
        },
        "theme": {
          "description": "TUI background theme",
          "type": "string",
          "enum": [
            "auto",
            "dark",
            "light"
          ]
        },
        "style": {
          "description": "Style of the color scheme",
          "type": "string",
          "enum": [
            "day",
            "night",
            "dawn",
            "dusk",
            "nord",
            "tera",
            "carbon"
          ]
        },
        "transparent": {
          "description": "Whether to make background transparent",
          "type": "boolean",
          "default": false
        },
        "global_status": {
          "description": "Whether to enable global statusline",
          "type": "boolean",
          "default": false
        },
        "border": {
          "description": "Floating window border style",
          "type": "string",
          "enum": [
            "bold",
            "double",
            "none",
            "rounded",
            "single"
          ]
        },
        "auto_dim": {
          "description": "Whether to dim inactive window automatically",
          "type": "boolean",
          "default": false
        },
        "devicons": {
          "description": "Whether to enable devicons (nvim-web-devicons)",
          "type": "boolean",
          "default": false
        }
      }
    },
    "gui": {
      "description": "GUI settings (Neovim Qt, VimR)",
      "type": "object",
      "properties": {
        "theme": {
          "description": "GUI background theme",
          "type": "string",
          "enum": [
            "auto",
            "dark",
            "light"
          ]
        },
        "opacity": {
          "description": "Window opacity (0.0~1.0)",
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "ligature": {
          "description": "Whether to render ligatures",
          "type": "boolean",
          "default": false
        },
        "popup_menu": {
          "description": "Whether to use GUI popup menu",
          "type": "boolean",
          "default": false
        },
        "tabline": {
          "description": "Whether to use GUI tabline",
          "type": "boolean",
          "default": false
        },
        "scroll_bar": {
          "description": "Whether to show GUI scroll bar",
          "type": "boolean",
          "default": false
        },
        "line_space": {
          "description": "Line space",
          "type": "number",
          "minimum": 0.0,
          "maximum": 10.0
        },
        "cursor_blink": {
          "description": "Whether to enable cursor blink",
          "type": "boolean",
          "default": false
        },
        "font_size": {
          "description": "GUI font size",
          "type": "integer",
          "minimum": 1
        },
        "font_half": {
          "description": "See 'guifont'",
          "type": "string"
        },
        "font_wide": {
          "description": "See 'guifontwide'",
          "type": "string"
        }
      }
    },
    "lsp": {
      "description": "Language Server Protocol",
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "properties": {
            "enable": {
              "description": "Whethter to enable the server",
              "type": "boolean",
              "default": false
            },
            "install": {
              "description": "Whethter to install the server",
              "type": "boolean",
              "default": false
            },
            "settings": {
              "description": "Extra settings, LSP specific",
              "type": "object",
              "default": {}
            }
          }
        }
      }
    },
    "dap": {
      "description": "Debug Adapter Protocol",
      "type": "object",
      "patternProperties": {
        "^.+$": {
          "type": "object",
          "properties": {
            "enable": {
              "description": "Whethter to enable the adapter",
              "type": "boolean",
              "default": false
            },
            "install": {
              "description": "Whethter to install the adapter",
              "type": "boolean",
              "default": false
            }
          }
        }
      }
    },
    "ts": {
      "description": "Treesitter",
      "type": "object",
      "properties": {
        "parsers": {
          "description": "Parsers to install and enable",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
